<minion:View xmlns:minion="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
      controllerName="exercise.controller.Main">

 
<!-- Exercise to bind checkBox -->
   <form:SimpleForm
        editable="true">  

    <form:content>
        <Label 
            text="Emp ID" 
        />

         

        <Input
            id="empId"
            placeholder="Enter ID"
            width="200px"
            value="{/empData/empId}"  
        />

        <Label 
            text="Enter your Name" 
        />
        <Input
            id="empName"
            placeholder="Enter Full Name"
            width="200px"
            value="{path :'/empData/empName'}"
         /> 

        <Label 
            text="Enter your salary" 
        />
        <Input
            id="salary"
            placeholder="Enter salary"
            width="200px"
        />

        <Label 
            text="Enter marrital status" 
        />
        <Input
            id="MarStatus"
            placeholder="S/M"
            width="200px"
        />
        <Label
         text="Smoker"
        />
       <CheckBox 
         id="chkbox"
         width="20px"
         selected="{/empData/smoker}"
        /> <!--Binding of checkBox can't Happen with value properties,
           It happen with selected property  -->
        
    
        
    </form:content>
</form:SimpleForm>

  <Button
            text="ClickMe"
            press="callMe"
        /> 
</minion:View>