<minion:View xmlns:core="sap.ui.core" xmlns:minion="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
    xmlns:table="sap.ui.table"
      controllerName="task.controller.Main">

 <Select id ="idSelectLanguage" change="onChange">
   <items>
      <core:Item text="select"></core:Item>
      <core:Item key="en" text="en"></core:Item>
      <core:Item key="es" text="es"></core:Item>
    </items>
 </Select>

  <Button
            text="{XBUT_CHANGE}"
            press="onClick"
        /> 
  <Text
       id = "idText"
       text="{value:'myText',formatter:'.changeLanguage'}"

  />
    
</minion:View>