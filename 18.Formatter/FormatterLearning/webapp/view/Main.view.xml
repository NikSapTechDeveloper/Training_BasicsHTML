<minion:View xmlns:minion="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
    xmlns:table="sap.ui.table"
      controllerName="bindingType.controller.Main">

 <table:Table rows="{/empArray}" selectionMode="Single" rowSelectionChange="onSelect">
    <table:columns>
      <table:Column label="{i18n>XLBL_ID}">
        <table:template>
          <Text text="{empId}"></Text>
        </table:template>
      </table:Column>
      <table:Column>
        <table:label>
          <Text text="{i18n>XLBL_EMPNAME}"></Text>
        </table:label>
        <table:template>
          <Text text="{empName}"></Text>
        </table:template>
      </table:Column>
    </table:columns>
    
 </table:Table>

   <form:SimpleForm
        id="idSimpleForm"
        editable="true">  

    <form:content>
        <Label 
            text="{i18n>XLBL_ID}" 
        />

         

        <Input
            id="empId"
            placeholder="Enter ID"
            width="200px"
            value="{empId}"  
        />  <!-- property binding type 1 -->

        <Label 
            text="{i18n>XLBL_EMPNAME}" 
        />
        <Input
            id="empName"
            placeholder="Enter Full Name"
            width="200px"
            value="{path :'empName'}"
         /> <!-- property binding type 2 -->

        <Label 
            text="{i18n>XLBL_SALARY}" 
        />
        <Input
            id="salary"
            placeholder="Enter salary"
            width="200px"
            value="{path :'salary'}"
            enabled="{= ${/empData/empName} === 'Anant' ? false : true}"
         /> <!--Expression binding -->

        <Label 
            text="Enter marrital status" 
        />
        <Input
            id="MarStatus"
            placeholder="S/M"
            width="200px"
        />
        <Label
         text="Smoker"
        />
       <CheckBox 
         id="chkbox"
         width="20px"
       
       />
        
    
        
    </form:content>
</form:SimpleForm>

  <Button
            text="{i18n>XBUT_CLICKME}"
            press="callMe"
        /> 
</minion:View>